<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wujie.springbootlayui.bus.mapper.TempVisitorMapper">

    <resultMap type="com.wujie.springbootlayui.bus.entity.TempVisitor" id="visitorMap" autoMapping="true">
        <result property="id" column="id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="allSql">
        id , visitor_name ,phone, visit_time,leave_time , gate_ids,belong_id,status,
        sex, id_num, visitor_photo, create_time, update_time,recog_status,remark,creator_name
     </sql>

    <select id="getValidVisitors" resultMap="visitorMap">
        select
        <include refid="allSql"></include>
        from face_server.bus_temp_visitor
        where belong_id = #{belongId}
        and status = 1
        and find_in_set(#{gateId},gate_ids)
    </select>

    <select id="getVisitorById" resultMap="visitorMap">
        select
        <include refid="allSql"></include>
        from face_server.bus_temp_visitor
        where id = #{id}
    </select>

    <select id="getValidVisitorByIdNum" resultType="Integer">
        select
            1
        from face_server.bus_temp_visitor
        where id_num = #{idNum} and
              belong_id = #{belongId}
    </select>

    <delete id="deleteTempVisitorByUid">
        delete from bus_temp_visitor where belong_id = #{belongId}
    </delete>

</mapper>
